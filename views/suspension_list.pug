extend layout

block content

  h2= title
  if !!bikesWithSuspension
    div( class="alert alert-dark" role="alert")
      p You can't delete this suspension, it's in use by the following bikes:
        ul
          each bike in bikesWithSuspension
            li=bike.brand + ' ' + bike.model
  ul(class="list-group list-group-flush")
    each sus in sus_list
      div(class='container')
        li(class="list-group-item ")
          div(class='d-flex flex-nowrap justify-content-between align-items-center')
            div #{sus.brand + ' ' + sus.model} - Travel: #{sus.travel}mm Position: #{sus.position}
            div
              div(class='d-flex flex-nowrap')
                form(method='GET' action=`/catalog/components/suspensions/${sus._id}/update`)
                  button(class='btn btn-primary btn-sm' type='submit' ) Edit
                form( method='POST' action=`/catalog/components/suspensions/${sus._id}/delete`)
                  button(type='submit' class='btn btn-danger btn-sm sm' style={ margin:'0 0 0 3px'}) Delete
                